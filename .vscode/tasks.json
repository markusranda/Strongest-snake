{
    "tasks": [
        {
            "label": "build-strongest-snake",
            "type": "shell",
            "command": "Clear-Host; cmake --build build --config Debug"
        },
        {
            "label": "build-strongest-snake-maxmode",
            "type": "shell",
            "command": "Clear-Host; cmake --build build --config Release --parallel"
        },
        {
            "label": "build-rigmor",
            "type": "shell",
            "command": ".\\rigmor\\script_build.ps1",
            "group": {
                "kind": "build",
                "isDefault": false
            } 
        },
        {
            "label": "run-strongest-snake",
            "type": "shell",
            "command": "raddbg ${workspaceFolder}/build/Debug/strongest_snake.exe",
            "dependsOn": "build-strongest-snake",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            }
        }
    ],
    "version": "2.0.0"
}